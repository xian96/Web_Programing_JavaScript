<link rel="stylesheet" href="{{linkHref}}">
<h1>People Finder</h1>
{{!-- do need to wrap in the main tag??? or budy?? --}}

<body>
    <p>website for lab8, search through a dataset.</p>
    <form action="/search" method="POST" class="search_personName">
        {{!-- have an input and a label; the label should properly reference the same id as the input --}}
        <label>
            search input:
            <input type="text" name="personName" placeholder="input_personName_for_search" value="{{personName}}"
                class="personName for search">
        </label>
        <label>
            submit button:
            <button type="submit">submit</button>
        </label>

    </form>
    {{#if hasErrors}}
    <ul class="error-list">
        {{#each errors}}
        <li>
            {{this}}
        </li>
        {{/each}}
    </ul>
    {{/if}}
</body>